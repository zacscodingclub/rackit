<div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-8">
    <div class="flex justify-between items-center border-b border-gray-200 dark:border-gray-700 pb-4 mb-4">
      <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white">Components Library</h1>
      <%= link_to new_component_path, class: "inline-flex items-center px-4 py-2 rounded-md bg-blue-600 text-white font-medium shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        Add Component
      <% end %>
    </div>
    
    <p class="text-gray-600 dark:text-gray-400 mb-6">
      Browse and select components to add to your server racks. Click on a component to view details.
    </p>
  </div>

  <div class="overflow-x-auto bg-white dark:bg-gray-800 shadow-md rounded-lg">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
      <thead>
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-400 bg-gray-50 dark:bg-gray-700">
            <%= sortable "name", "Name" %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-400 bg-gray-50 dark:bg-gray-700">
            <%= sortable "brand", "Brand" %>
          </th>
          <th scope="col" class="px-6 py-3 text-center text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-400 bg-gray-50 dark:bg-gray-700">
            <%= sortable "height", "Height (U)" %>
          </th>
          <th scope="col" class="px-6 py-3 text-center text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-400 bg-gray-50 dark:bg-gray-700">
            <%= sortable "depth", "Depth (inches)" %>
          </th>
          <th scope="col" class="px-6 py-3 text-center text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-400 bg-gray-50 dark:bg-gray-700">
            <%= sortable "created_at", "Created" %>
          </th>
          <th scope="col" class="px-6 py-3 text-center text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-400 bg-gray-50 dark:bg-gray-700">
            <%= sortable "updated_at", "Updated" %>
          </th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
        <% @components.each do |component| %>
          <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 cursor-pointer transition-colors" onclick="window.location='<%= component_path(component) %>';">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-blue-600 font-medium"><%= component.name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-gray-700 dark:text-gray-300">
              <%= component.brand %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-center text-gray-700 dark:text-gray-300">
              <%= component.height %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-center text-gray-700 dark:text-gray-300">
              <%= component.depth %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-center text-xs text-gray-500 dark:text-gray-400">
              <%= component.created_at.strftime("%Y-%m-%d %H:%M") if component.created_at %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-center text-xs text-gray-500 dark:text-gray-400">
              <%= component.updated_at.strftime("%Y-%m-%d %H:%M") if component.updated_at %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <% if @components.empty? %>
    <div class="mt-6 text-center py-12 border-2 border-dashed border-gray-300 dark:border-gray-700 rounded-md">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">No components found</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by creating your first component.</p>
      <div class="mt-6">
        <%= link_to new_component_path, class: "inline-flex items-center px-4 py-2 rounded-md bg-blue-600 text-white font-medium shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
          Add Component
        <% end %>
      </div>
    </div>
  <% end %>
</div>
