<div class="w-full">
  <div class="bg-white dark:bg-gray-800 shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold"><%= @component.name %></h1>
      <div>
        <%= link_to "Edit", edit_component_path(@component), class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded mr-2" %>
        <%= link_to "Back", components_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
    
    <div class="mb-4">
      <h2 class="text-xl font-semibold mb-2">Description</h2>
      <p class="text-gray-700 dark:text-gray-300"><%= @component.description %></p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div>
        <h2 class="text-xl font-semibold mb-2">Height</h2>
        <p class="text-gray-700 dark:text-gray-300"><%= @component.height %> U</p>
      </div>
      <div>
        <h2 class="text-xl font-semibold mb-2">Depth</h2>
        <p class="text-gray-700 dark:text-gray-300"><%= @component.depth %> inches</p>
      </div>
    </div>
    
    <div class="border-t border-gray-300 dark:border-gray-700 pt-4">
      <h2 class="text-xl font-semibold mb-2">Used in Racks</h2>
      <% if @component.server_racks.any? %>
        <ul class="list-disc list-inside">
          <% @component.server_racks.each do |rack| %>
            <li><%= link_to rack.name, rack, class: "text-blue-500 hover:text-blue-700" %></li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500">This component is not used in any racks yet.</p>
      <% end %>
    </div>
  </div>
</div>
