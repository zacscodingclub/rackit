<div id="server_racks" class="min-w-full divide-y divide-gray-200 dark:divide-gray-700 space-y-5">
  <% if @server_racks.any? %>
    <% @server_racks.each do |server_rack| %>
      <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
        <%= render server_rack %>
        <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
          <%= link_to "Show", server_rack, class: "w-full sm:w-auto text-center rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white dark:bg-blue-800 dark:hover:bg-blue-700 dark:text-white inline-block font-medium" %>
          <%= link_to "Edit", edit_server_rack_path(server_rack), class: "w-full sm:w-auto text-center rounded-md px-4 py-2 bg-yellow-600 hover:bg-yellow-500 text-white dark:bg-yellow-800 dark:hover:bg-yellow-700 dark:text-white inline-block font-medium" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-center my-10 text-black dark:text-white">No server racks found.</p>
  <% end %>s
</div>