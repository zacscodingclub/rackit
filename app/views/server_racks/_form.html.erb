<%= form_with(model: server_rack, class: "contents") do |form| %>
  <% if server_rack.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(server_rack.errors.count, "error") %> prohibited this server_rack from being saved:</h2>

      <ul class="list-disc ml-6">
        <% server_rack.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": server_rack.errors[:name].none?, "border-red-400 focus:outline-red-600": server_rack.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :height %>
    <%= form.number_field :height, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": server_rack.errors[:height].none?, "border-red-400 focus:outline-red-600": server_rack.errors[:height].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :depth %>
    <%= form.text_field :depth, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": server_rack.errors[:depth].none?, "border-red-400 focus:outline-red-600": server_rack.errors[:depth].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
